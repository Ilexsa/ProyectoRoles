CREATE TABLE TRABAJADORES(
CEDULA varchar(10) PRIMARY KEY NOT NULL,
IdLocalidad int NOT NULL,
IdDepartamento int NOT NULL,
NOMBRES VARCHAR (255)NOT NULL,
FECHA_INGRESO DATE NOT NULL,
CARGO VARCHAR(255)NOT NULL,
SUELDO_BASE FLOAT NOT NULL,
PER_DISCAPACIDAD VARCHAR (255),
CONSTRAINT fk_LOCALIDADES FOREIGN KEY (IdLocalidad)REFERENCES LOCALIDADES (ID),
CONSTRAINT fk_DEPARTAMENTOS FOREIGN KEY (IdDepartamento)REFERENCES DEPARTAMENTOS (ID),
)
CREATE TABLE NOMINA(
ID INT PRIMARY KEY IDENTITY (1,1)NOT NULL,
CEDULA VARCHAR (10)NOT NULL,
MATER_ENFG VARCHAR (255),
ALIMENTACION FLOAT,
MOVILIZACION FLOAT,
OTROS_INGRESOS_NA FLOAT,
OTROS_INGRESOS_A FLOAT,
R_NOCTURNO FLOAT,
R_NOCUTNO50 FLOAT,
R_NOCTURNO100 FLOAT,
EXTRAS FLOAT,
INGRESOS_IESS FLOAT,
T_INGRESOS FLOAT NOT NULL,
A_QUINCENA FLOAT,
P_QUIROGRAFARIOS FLOAT,
P_HIPOTECARIOS FLOAT,
DESCUENTO_PERMISOS_MEDICOS FLOAT,
CxP FLOAT,
DESCUADRES FLOAT,
SUPA FLOAT,
EGRESOS_IESS FLOAT NOT NULL,
T_EGRESOS FLOAT NOT NULL,
NETO_RECIBIR FLOAT NOT NULL, 
CONSTRAINT fk_TRABAJADORES FOREIGN KEY (CEDULA)REFERENCES TRABAJADORES (CEDULA),
)
