create database ROLES

USE ROLES

CREATE TABLE LOCALIDADES(
ID INT PRIMARY KEY IDENTITY (1,1) NOT NULL,
LOCALIDAD varchar (50) NOT NULL,
)
CREATE TABLE DEPARTAMENTOS(
ID INT PRIMARY KEY IDENTITY (1,1)NOT NULL,
DEPARTAMENTO varchar (50) NOT NULL,
)

